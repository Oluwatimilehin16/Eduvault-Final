# PHP limits for base64 file storage
# Base64 encoding increases file size by ~33%, so we need higher limits

# File upload limits (keep these for the initial upload processing)
php_value upload_max_filesize 100M
php_value post_max_size 150M

# Memory and execution limits (increased for base64 processing)
php_value memory_limit 768M
php_value max_execution_time 900
php_value max_input_time 900

# MySQL packet size (important for storing large base64 strings)
php_value mysql.max_allowed_packet 128M

# Apache request body limit (increased for base64 data)
LimitRequestBody 157286400

# Optional: Disable output buffering for large data
php_value output_buffering Off

# Security headers (recommended)
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"